    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        JOptionPane.showMessageDialog(null,
                "This app is designed to provide you two apps into one. \n There is a Currency Converter that gives you only the most recent currency "
                        + "rate. Updated every three days! \n There is a Tax Calculator that shows you how much it costs for a service in Ottawa \n so you can save money by knowing "
                        + "how much you will be paying in total before you buy the product. \n That is why this app is called 'My Money's Best Friend'. \n"
                        + "Thank you for using our app!", "About",
                        JOptionPane.INFORMATION_MESSAGE
                    );
                return;
                
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        MyCurrencyConverter mycurrencyconverter = new MyCurrencyConverter();
        mycurrencyconverter.show();
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        Tax_Calculator tax_calculator = new Tax_Calculator();
        tax_calculator.show();
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        System.exit(0);
    }                                        

